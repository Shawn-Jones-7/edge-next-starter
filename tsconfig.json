{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,

    // 严格模式 - 全部开启
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // exactOptionalPropertyTypes 暂时关闭
    // 原因：需要修复 38+ 个类型错误（主要在 analytics、middleware、auth 相关代码）
    // 这个选项要求严格区分 { foo?: string } 和 { foo: string | undefined }
    // TODO: 逐步修复以下文件后重新启用：
    //   - lib/analytics/index.ts (7处)
    //   - lib/api/middleware.ts (4处)
    //   - lib/auth/adapter.ts (3处)
    //   - lib/auth/config.ts (3处)
    //   - repositories/post.repository.ts (2处)
    //   - app/api/posts/route.ts (3处)
    //   - 其他文件 (16处)
    // 参考: https://www.typescriptlang.org/tsconfig#exactOptionalPropertyTypes
    // "exactOptionalPropertyTypes": true,

    "noUncheckedIndexedAccess": true,

    // 额外的类型检查
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["@cloudflare/workers-types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "services/**/*",
    "repositories/**/*",
    "types/**/*",
    "middleware.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__",
    "scripts",
    "migrations"
  ]
}
